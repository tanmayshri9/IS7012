@page
@model TravelBug.Pages.Travelers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Travelers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].EmailID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Traveler) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
