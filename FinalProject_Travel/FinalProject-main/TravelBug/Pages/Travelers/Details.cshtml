@model TravelBug.Pages.Travelers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Traveler Details</h1>

<div>
    <h4>Traveler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.EmailID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.EmailID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Traveler.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traveler.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Traveler.Age)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => Model.Traveler.Age)
        </dd>
    </dl>
</div>

<div>
    <h2>Bookings for this Traveler</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Traveler.Bookings[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.Traveler.Bookings[0].StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.Traveler.Bookings[0].EndDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Traveler.Bookings)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>
                    <a asp-page="/Bookings/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

