@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/css/carousel.css" rel="stylesheet">
    <!--Font sheet-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Manjari' rel='stylesheet'>
</head>
<body>
    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="first-slide" src="~/img/home-bg.jpg" alt="Travel">
                    <div class="container">
                        <div class="carousel-caption text-xl-center">
                            <h1>Travel Bug</h1>
                            <p>You dream and we plan.</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="second-slide" src="~/img/home2-bg.jpg" alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h2>Local. Authentic. Easy.</h2>
                            <p class="font-weight-bolder">Behind every trip is a Buddy host that’ll give you all the local insider tips. Accommodation, transportation, and local guides all included</p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="third-slide" src="~/img/beach.jpg" alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h2>We are here to HELP.</h2>
                            <p class="text-light font-weight-bolder">Given the COVID-19 outbreak we urge you to stay tuned to the updated guidelines </p><p class="text-light font-weight-bolder">to make informed decisions regarding your travel.</p>
                            <p><a class="btn btn-lg btn-primary" href="https://travel.state.gov/content/travel/en/traveladvisories/ea/covid-19-information.html" role="button">See Guidelines</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


        <!-- Marketing messaging and featurettes
    ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->

        <div class="container marketing">

            <!-- Three columns of text below the carousel -->
            <!-- START THE FEATURETTES -->

            <hr>

            <div class="row">
                <div class="col-md-7">
                    <h2 class="featurette-heading">Book with confidence  <span class="text-muted">Flexibility promise  </span></h2>
                    <p class="lead">We know plans change, which is why we make sure those hard-earned funds are protected. With our 30-day refund program you can change your plans for any reason, or no reason at all and rest assured your money is protected.</p>
                </div>
                <div class="col-md-5">
                    <img class="featurette-image img-fluid mx-auto" src="~/img/pins.jpg" alt="Generic placeholder image">
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-7 order-md-2">
                    <h2 class="featurette-heading">Our commitment to your  <span class="text-muted"> well-being</span></h2>
                    <p class="lead">We’ve stepped up our health and hygiene practices because your safety is always our top priority. You can travel with confidence knowing we’ve adopted top-notch global safety protocols.</p>
                </div>
                <div class="col-md-5 order-md-1">
                    <img class="featurette-image img-fluid mx-auto" src="~/img/girl_baloon.jpeg" alt="Generic placeholder image">
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-7">
                    <h2 class="featurette-heading">Latest Reviews. <span class="text-muted">Lowest Prices.</span></h2>
                    <p class="lead">Choose from our multiple packages that fit every pocket. Drop us an email to request custom packages.</p>
                </div>
                <div class="col-md-5">
                    <img class="featurette-image img-fluid mx-auto" src="~/img/greece.jpg" alt="Generic placeholder image">
                </div>
            </div>

            <!-- /END THE FEATURETTES -->

        </div><!-- /.container -->

        <div>
            <div class="card" style="width:100%">
                <h2 class="text-center" style="color:brown">Make your own package</h2>



                <form action="/post" class="text-center">
                    <label for="fname">First name</label><br>
                    <input type="text" id="fname" name="fname" value=""><br>
                    <label for="lname">Last name</label><br>
                    <input type="text" id="lname" name="lname" value=""><br><br>
                    <label for="mail">Email ID</label><br>
                    <input type="email" id="" name="mail" value=""><br><br>
                    <label for="fname">Destination</label><br>
                    <input type="text" id="fname" name="fname" value=""><br>
                    <button class="btn-group-toggle" type="button" disabled>Get your Quote</button>
                </form>



                <p class="text-center">Enter your information to hear from us!</p>
            </div>
</body>
</html>
