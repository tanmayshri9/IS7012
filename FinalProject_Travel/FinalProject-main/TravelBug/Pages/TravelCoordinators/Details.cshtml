@page
@model TravelBug.Pages.TravelCoordinators.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Travel Coordinator Details</h1>

<div>
    <h4>TravelCoordinator</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.EmployeeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.EmailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.EmailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TravelCoordinator.Experience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelCoordinator.Experience)
        </dd>
    </dl>
</div>

<div>
    <h2>Bookings under this Travel Coordinator</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TravelCoordinator.Bookings[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.TravelCoordinator.Bookings[0].StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.TravelCoordinator.Bookings[0].EndDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TravelCoordinator.Bookings)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>
                    <a asp-page="/Bookings/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>            }
        </tbody>
    </table>



</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.TravelCoordinator.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
