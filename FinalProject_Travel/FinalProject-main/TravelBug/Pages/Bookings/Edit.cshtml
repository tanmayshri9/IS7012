@page
@model TravelBug.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Booking</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.Id" />
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.EndDate" class="control-label"></label>
                <input asp-for="Booking.EndDate" class="form-control" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingStatus" class="control-label"></label>
                <input asp-for="Booking.BookingStatus" class="form-control" />
                <span asp-validation-for="Booking.BookingStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TravelerId" class="control-label"></label>
                <select asp-for="Booking.TravelerId" class="form-control" asp-items="ViewBag.TravelerId"></select>
                <span asp-validation-for="Booking.TravelerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PackageId" class="control-label"></label>
                <select asp-for="Booking.PackageId" class="form-control" asp-items="ViewBag.PackageId"></select>
                <span asp-validation-for="Booking.PackageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TravelerCoordinatorId" class="control-label"></label>
                <select asp-for="Booking.TravelerCoordinatorId" class="form-control" asp-items="ViewBag.TravelerCoordinatorId"></select>
                <span asp-validation-for="Booking.TravelerCoordinatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
