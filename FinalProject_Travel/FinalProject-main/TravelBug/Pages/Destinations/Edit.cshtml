@page
@model TravelBug.Pages.Destinations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Destination</h1>

<h4>Destination</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Destination.Id" />
            <div class="form-group">
                <label asp-for="Destination.Name" class="control-label"></label>
                <input asp-for="Destination.Name" class="form-control" />
                <span asp-validation-for="Destination.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination.State" class="control-label"></label>
                <input asp-for="Destination.State" class="form-control" />
                <span asp-validation-for="Destination.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination.Country" class="control-label"></label>
                <input asp-for="Destination.Country" class="form-control" />
                <span asp-validation-for="Destination.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination.TouristAttraction" class="control-label"></label>
                <input asp-for="Destination.TouristAttraction" class="form-control" />
                <span asp-validation-for="Destination.TouristAttraction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
