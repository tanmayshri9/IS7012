@page
@model TravelBug.Pages.Destinations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Destination Details</h1>

<div>
    <h4>Destination</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination.TouristAttraction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination.TouristAttraction)
        </dd>
    </dl>
</div>

<div>
    <h2>Packages under this Destination</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Destination.Packages[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Destination.Packages[0].FlightClass)</th>
                <th>@Html.DisplayNameFor(model => model.Destination.Packages[0].HotelRating)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Destination.Packages)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.FlightClass)</td>
                    <td>@Html.DisplayFor(modelItem => item.HotelRating)</td>
                    <td>
                        <a asp-page="/Packages/Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
}
        </tbody>
    </table>
</div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Destination.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
