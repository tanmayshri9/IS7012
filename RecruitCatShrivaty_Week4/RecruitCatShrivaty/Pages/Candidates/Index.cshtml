@page
@model RecruitCatShrivaty.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Candidates</h1>

<p>
    <a asp-page="Create">Create a new Candidate</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].SSN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].OptionalStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].CreditScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionalStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.IndustryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreditScore)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
