@page
@model RecruitCatShrivaty.Pages.JobTitles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Job Title</h1>

<p>
    <a asp-page="Create">Create New Job Title</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].JobTitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MinimumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MaximumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].JobDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].IsPermanent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobTitle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPermanent)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.JobTitleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.JobTitleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.JobTitleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
