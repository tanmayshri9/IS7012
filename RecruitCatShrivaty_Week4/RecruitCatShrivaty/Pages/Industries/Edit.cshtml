@page
@model RecruitCatShrivaty.Pages.Industries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Industry</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Industry.IndustryId" />
            <div class="form-group">
                <label asp-for="Industry.IndustryName" class="control-label"></label>
                <input asp-for="Industry.IndustryName" class="form-control" />
                <span asp-validation-for="Industry.IndustryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.IndustryType" class="control-label"></label>
                <input asp-for="Industry.IndustryType" class="form-control" />
                <span asp-validation-for="Industry.IndustryType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Industry.IsGovernment" /> @Html.DisplayNameFor(model => model.Industry.IsGovernment)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
